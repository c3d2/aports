# Contributor:
# Maintainer: Jonathan Sieber <mail@strfry.org>
pkgname=rem
pkgver=0.5.2
pkgrel=0
pkgdesc=" Librem is a portable and generic library for real-time audio and video processing. "
url="http://www.creytiv.com/rem.html"
arch="all"
license="BSD"
depends="re"
makedepends="re-dev"
install=""
options="!check"
subpackages="$pkgname-dev"
source="http://www.creytiv.com/pub/rem-0.5.2.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"


build() {
	cd "$builddir"
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}


sha512sums="827c5e7e34feba894d0c040f7cb618c8ae2bf49674b3fe1bbe32abb888174e811434cf20489c38f1a8a52db129651b0d92a3d516ca3f6b3fc65aa47a263115cb  rem-0.5.2.tar.gz"
