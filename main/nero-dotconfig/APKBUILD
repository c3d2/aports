# Maintainer: Ain <ain@waifu.club>
pkgname=nero-dotconfig
pkgver=20171202
pkgrel=0
pkgdesc="Nero's dotconfig"
url="https://github.com/ainriver/dotconfig"
arch="noarch"
license="proprietary"
depends="git curl mksh"
giturl="${url}.git"
install="$pkgname.post-install"

_builddir="${srcdir}/dotconfig-${_githash}"

unpack() {
        git clone "${giturl}" "${_builddir}" || return 1
	cd "${_builddir}"
	git remote set-url origin /usr/share/nero-skel/.config
}

package() {
	mkdir -p "$pkgdir"/usr/share/nero-skel
	cp -r "${_builddir}" "$pkgdir"/usr/share/nero-skel/.config
	ln -s .config/profile "$pkgdir"/usr/share/nero-skel/.profile
}
