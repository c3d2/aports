# Contributor:
# Maintainer: Jonathan Sieber <mail@strfry.org>
pkgname=re
pkgver=0.5.6
pkgrel=0
pkgdesc="Generic library for real-time communications with async IO support"
url="http://www.creytiv.com/re.html"
arch="all"
license="BSD"
depends="libressl zlib"
makedepends="libressl-dev"
install=""
options="!check"
subpackages="$pkgname-dev"
source="http://www.creytiv.com/pub/re-0.5.6.tar.gz
	musl-libc-fix.patch"
builddir="$srcdir/$pkgname-$pkgver"


build() {
	cd "$builddir"
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}


