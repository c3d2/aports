#!/sbin/openrc-run

name="$SVCNAME"

depend() {
	need root
}

start()
{
	awk -F ':' '{if($3>=1000 && $3<65534){print($3,$4,$6)}}' </etc/passwd | while read uid gid dir; do
		for i in "/run/user/$uid" "/etc/user/$uid" "/var/cache/user/$uid"; do
			mkdir -p "$i"
			chown -R "$uid:$gid" "$i"
		done
	done
}
