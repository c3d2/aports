# Maintainer: Nero <nero@w1r3.net>
pkgname=xdg-base-dirs
pkgver=0.2
pkgrel=0
pkgdesc="Automatically set up XDG base dirs"
url="http://nero.github.io/"
arch="noarch"
license="MIT"
source="xdg-base-dirs xdg-base-dirs.sh"
options="!check"

package() {
	mkdir -p "$pkgdir/etc/init.d" "$pkgdir/etc/profile.d"
	install -m 0755 xdg-base-dirs "$pkgdir/etc/init.d/"
	install -m 0644 xdg-base-dirs.sh "$pkgdir/etc/profile.d/"
}

sha512sums="1d23c02b0089d2731aac039fd4e7174bf31fe6b710e0feb51c68245a322e3fb356492d56ec43f73088211a3d06bca6305cc8d143ca12694ab04ef7dae0304b36  xdg-base-dirs
2b90ea26d7119a4a268f5907acd0d151be5841802057781b3149781c129edcff44f3d9f8a9e7c5bb24ca32023eae05b9c0c162c6d09540662c787ed61e884498  xdg-base-dirs.sh"
