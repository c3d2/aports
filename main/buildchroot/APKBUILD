# Maintainer: Nero <nero@w1r3.net>
pkgname=buildchroot
pkgver=0.1
pkgrel=0
pkgdesc="Unprivileged chroot with CLONE_NEWUSER"
url="https://github.com/nero/buildchroot"
arch="all"
license="MIT"
makedepends=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/nero/${pkgname}/archive/v${pkgver}.tar.gz"
subpackages=""
options="!check"

build() {
	make
}

package() {
	cd "$srcdir"/"${pkgname}-${pkgver}"
	mkdir -p "$pkgdir/usr/bin"
	cp buildchroot "$pkgdir/usr/bin/"
}

sha512sums="acf1891f93a04670af2bdbc8606c2b602cf1cdaf9fbfa25dd7423e2cc07698433f43ed457a62929e639fda1c9c8f580757c4147c651e842e8e262d104e1e39c4  buildchroot-0.1.tar.gz"
